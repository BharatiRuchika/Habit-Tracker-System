<body>
    <!-- Include header -->
    <div id="main-body">
        <%- include('_header') %>
        <div class="habitTracker-body">
            <!-- Main content -->
            <%- body %>
        </div>
    </div>
   

       
            <%- script %>
                <script>
        <% if (flash.success && flash.success.length > 0) { %>
                        new Noty({
                            theme: 'relax',
                            text: '<%=flash.success %>',
                            type: 'success',
                            layout: 'topRight',
                            timeout: '1500'
                        }).show()
                        <% }%>

        <% if (flash.error && flash.error.length > 0) { %>
            new Noty({
                theme: 'relax',
                text: '<%=flash.error %>',
                type: 'error',
                layout: 'topRight',
                timeout: '1500'
            }).show()
        <% }%>
    </script>
        <!-- External JavaScript libraries -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
