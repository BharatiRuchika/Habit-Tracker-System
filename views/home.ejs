<!-- Include external stylesheet for home -->
<link rel="stylesheet" href="/css/home.css">

<!-- Container for the calendar with habits data attribute -->
<div class="calendar" data-habits="<%=habits %>">

    <!-- Calendar header section with navigation buttons and current week display -->
    <div class="calendar-header">
        <button id="prevWeek">Previous Week</button>
        <h1 id="currentWeek">Week of November 1, 2023</h1>
        <button id="nextWeek">Next Week</button>
    </div>

    <!-- Calendar grid for day headers -->
    <div class="row">
        <div class="calendar-grid">
            <div class="day-header">Sun</div>
            <div class="day-header">Mon</div>
            <div class="day-header">Tue</div>
            <div class="day-header">Wed</div>
            <div class="day-header">Thu</div>
            <div class="day-header">Fri</div>
            <div class="day-header">Sat</div>
        </div>
    </div>
</div>

<!-- Row for displaying the habit list -->
<div class="row">
    <div class="offset-4 col-4">
        <ul id="habitList">
            <!-- Habits will be dynamically added here -->
        </ul>
    </div>
</div>
 <!-- Include external JavaScript for calendar functionality -->
 <script src="/js/calendar.js"></script>


