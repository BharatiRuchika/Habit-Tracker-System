<!-- Include external stylesheet for header styling -->
<link rel="stylesheet" href="/css/header.css">
<!-- Header section -->
<div id="header">

    <!-- Nested row for header content -->
    <div class="row">
        <div class="col-12">
            <div class="row">

                <!-- Logo column -->
                <div class="col-4">
                    <h1>Habits</h1>
                </div>

                <!-- Navigation and user actions section -->
                <% if(locals.user){%>
                    <div class="col-5 offset-3" id="header-icons">

                        <!-- Responsive navigation toggle button -->
                        <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                            aria-label="Toggle navigation">
                            <i class="fas fa-bars facebook-icons"></i>
                        </button>

                        <!-- Desktop navigation links -->
                        <div class="d-none d-lg-block">
                            <a href="/">
                                <button class="btn btn-primary friend-request-btn" data-toggle="collapse"
                                    data-target="#">
                                    <i class="fas fa-home"></i>
                                </button>
                            </a>

                            <a href="/api/v1/users/habit/displayCreate">
                                <button class="btn btn-primary friend-request-btn" data-toggle="collapse"
                                    data-target="#">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </a>

                            <a href="/api/v1/users/habit/displayWeekView">
                                <button class="btn btn-primary friend-request-btn" data-toggle="collapse"
                                    data-target="#userRequests">
                                    Week View
                                </button>
                            </a>

                           
                            <a href="/api/v1/users/sign-out">
                                <button class="btn btn-primary friend-request-btn" data-toggle="collapse"
                                    data-target="#userRequests">
                                    <i class="fa-solid fa-right-from-bracket"></i>
                                    Sign Out
                                </button>
                            </a>
                        </div>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="/"><i class="fas fa-home"></i> Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/"><i class="fas fa-plus"></i> Create Habit</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/api/v1/users/habit/displayWeekView"> Week View</a>
                                </li>
                              
                                <li class="nav-item">
                                    <a class="nav-link" id="sign-out-icon" href="/api/v1/users/sign-out"><i
                                            class="fa-solid fa-right-from-bracket"></i>Sign Out</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <%}else{%>

                        <!-- Authentication buttons for non-logged-in users -->
                        <div class="col-4 offset-4">
                            <div id="auth-buttons">
                                <a href="/api/v1/users/sign-in"><button>Sign In</button></a>
                                <a href="/api/v1/users/sign-up"><button>Sign Up</button></a>
                            </div>
                        </div>
                        <%}%>
            </div>
        </div>
    </div>
</div>
<script src="/js/header.js"></script>