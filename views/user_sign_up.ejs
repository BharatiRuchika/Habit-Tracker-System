<!-- Link to an external CSS file for styling -->
<link rel="stylesheet" href="/css/auth.css">

<!-- Container for the sign-up form -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            
            <!-- Card element to create a bordered box for the form -->
            <div class="card">
                <div class="card-body">
                    
                    <!-- Facebook logo image -->
                    <div class="sign-up-habit-tracker-logo mb-3">
                        <img src="/images/habit-tracker-templates.png"/> 
                    </div>
                      
                    <!-- Text content inviting users to sign up -->
                    <div>
                        <h5 class="mt-4" style="color:gray;text-align: center;">Sign up to see photos and videos</h5>
                        <h5 class="mb-4" style="color:gray;text-align: center;">from your friends.</h5>
                    </div>

                    <!-- Form for user sign-up -->
                    <form action="/api/v1/users/create" method="POST">
                        
                        <!-- Input field for full name -->
                        <div class="mb-3">
                            <label for="fullName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" name="fullName" id="fullName" placeholder="Enter your full name" required>
                        </div>

                        <!-- Input field for email -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" name="email" id="email" placeholder="Enter your email" required>
                        </div>

                        <!-- Input field for date of birth -->
                        <div class="mb-3">
                            <label for="dob" class="form-label">Date Of Birth</label>
                            <input type="date" class="form-control" name="dateOfBirth" id="dob" placeholder="Enter your date of birth">
                        </div>

                        <!-- Input field for password -->
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" name="password" id="password" placeholder="Enter your password" required>
                        </div>

                        <!-- Input field to confirm the password -->
                        <div class="mb-3">
                            <label for="confirm-password" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="confirm-password" name="confirmPassword" placeholder="Confirm password" required>
                        </div>

                        <!-- Button to submit the form for sign-up -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Link to the sign-in page for users with an existing account -->
    <div class="row mt-3">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body" id="sign-up-footer">
                    <span>Have an account?   <a href="/api/v1/users/sign-in">Log in</a></span>
                </div>
            </div>
        </div>
    </div>
</div>